<div class="col-lg-12 text-end">
    <%= link_to "Add Food", new_food_path, class: "btn btn-dark"%>
</div>
<table class='table table-bordered mt-4'>
    <thead>
        <th>Food</th>
        <th>Quantity</th>
        <th>Measurement Unit</th>
        <th>Unit Price($)</th>
        <th>Actions</th>
    </thead>
    <tbody>
        <% @foods.each do |food|%>
        <tr>
            <td><%= food.name %></td>
            <td><%= food.quantity %></td>
            <td><%= food.measurement_unit %></td>
            <td><%= food.price %></td>
            <td><%= link_to "Remove", food_path(food), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure you want to delete this Food item?"} %></td>
        </tr>
        
        <% end %>
    </tbody>
</table>
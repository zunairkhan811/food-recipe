<div class="col-lg-12">
    <div class="card mt-1 mb-5">
        <div class="card-body">
            <h2 class="text-center">Add new Food</h2>
        </div>
    </div>

    <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-5">
            <%= form_with model: @food do |form| %>
              <div class="form-group">
                <%= form.label "Food Name(*)", class: "lead mb-2" %>
                <%= form.text_field :name, class: "form-control form-control-lg rounded-0" %>
                <% @food.errors.full_messages_for(:name).each do |message|  %>
                  <p class="text-danger"><%= message %></p>
                <% end %>
              </div>
              <div class="form-group">
                <%= form.label "#{:quantity}(*)", class: "lead mb-2" %>
                <%= form.number_field :quantity, class: "form-control form-control-lg rounded-0" %>
                <% @food.errors.full_messages_for(:quantity).each do |message|  %>
                  <p class="text-danger"><%= message %></p>
                <% end %>
              </div>
              <div class="form-group">
                <%= form.label "#{:measurement_unit}(*)", class: "lead mb-2" %>
                <%= form.text_field :measurement_unit, class: "form-control form-control-lg rounded-0" %>
                <% @food.errors.full_messages_for(:measurement_unit).each do |message|  %>
                  <p class="text-danger"><%= message %></p>
                <% end %>
              </div>
              <div class="form-group">
                <%= form.label "Unit Price$(*)", class: "lead mb-2" %>
                <%= form.text_field :price, class: "form-control form-control-lg rounded-0" %>
                <% @food.errors.full_messages_for(:price).each do |message|  %>
                  <p class="text-danger"><%= message %></p>
                <% end %>
              </div>
              <div class="form-group text-center mt-3">
                <%= form.submit "Add Food", class: "btn btn-primary btn-sm" %>
              </div>
            <% end %>
          </div>
        </div>
    </div>
      
    
</div>
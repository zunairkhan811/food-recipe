<div class="container-fluid d-flex flex-column justify-content-center align-items-center">
<div class="card mb-5 border-dark bg-dark text-warning">
  <h1 class="card-title">Shopping List For All Recipes of <%= current_user.name %></h1>
</div>
<div class="w-100">
  <div class="container w-50">
    <div class="row">
      <div class="col">
        Amount of food items to buy: <%= @total_items %>
      </div>

      <div class="col">
        Total value of food needed: <%= @total_value %>
      </div>
    </div>
  </div>
</div>
<% if @items_to_buy.empty? %>
<h3 class="tex-center mt-5">No Food items to buy. All items are available in Kitchen</h3>
<% else %>
<table class="table table-striped border border-dark table-hover w-50 mt-4">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Food</th>
      <th scope="col">Quantity</th>
      <th scope="col">Price</th>
    </tr>
  </thead>
  <tbody>
    <% @items_to_buy.each do |food| %>
        <tr>
          <td><%= food[:name] %></td>
          <td><%= food[:quantity] %></td>
          <td><%= food[:value] %></td>
        </tr>
    <% end %>
  </tbody>
</table>
<% end %>
